<%= provide(:title, 'new category') %>
<%= render 'shared/content_title', title: 'new category:' %>
<%= render 'shared/errors', obj: @category %>

<div class='well'>
  <%= form_for @category do |f| %>
    <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit 'create category', class: 'btn btn-success' %>
  <% end %>
</div>