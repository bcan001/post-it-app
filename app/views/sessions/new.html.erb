<h4>Please login</h4>

<!-- since there is no db for the 'session', this uses a non model backed form-->
<div class='well'>
	<%= form_tag '/login' do %>
		<div class='control-group'>
			<%= label_tag :username %>
			<%= text_field_tag :username, params[:username] || ''%>
		</div>
		<div class='control-group'>
			<%= label_tag :password %>
			<%= password_field_tag :password, params[:password] || ''%>
		</div>
		<%= submit_tag 'login', class: 'btn btn-success' %>
	<% end %>
</div>
