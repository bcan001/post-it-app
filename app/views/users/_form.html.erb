<%= provide(:title, 'User') %>

<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
	<%= f.label :username %>
	<%= f.text_field :username %>
	<%= f.label :password %>
	<%= f.text_field :password %>
	
	<%= f.submit @user.new_record? ? 'register' : 'update profile', class: 'btn btn-success'%>
<% end %>