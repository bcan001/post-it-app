<%= provide(:title, 'post') %>

<% if @post.errors.any? %>
  <div class='row'>
  	<div class='alert alert-error span8'>
  		<h5> Please fix the following errors: </h5>
  		<ul>
    		<% @post.errors.full_messages.each do |msg| %>
      	<li><%= msg %></li>
    		<% end %>
    	</ul>
  	</div>
  </div>
<% end %>

<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :url %>
	<%= f.text_field :url %>
	<%= f.label :description %>
	<%= f.text_area :description, rows: 5 %>

	<%= f.hidden_field :user_id, :value => @post.creator %>
	
	<%= f.submit(@post.new_record? ? 'Create post' : 'Update Post', class: 'btn btn-primary' )%>
<% end %>
